Procedure LogOut(why:string);
Begin
  Writeln(why);
  Wait(100);
  MoveMouse(658,512);
  Wait(100);
  ClickMouse(658,512,true);
  Wait(100);
  MoveMouse(657,403);
  Wait(100);
  ClickMouse(657,403,true);
  Wait(100);
  Status('Script Finished. Infinty Loop.');
  ClearTimeOuts;
