Begin
  LoadingBitmaps;
  trips:=0;
  ST:=GetSystemTime;
  L:=0;
  G:=0;
  LogInIfNeeded;
  Repeat
     trips:=trips+1;
     ToMage;
     GoToEssence;
     WhereAreWe;
     WalkNear('essence');
     DoMining;
     WalkNear('portal');
